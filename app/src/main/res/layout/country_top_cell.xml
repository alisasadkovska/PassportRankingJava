<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/room_status_cell_width"
    android:layout_height="88dp">


    <ImageView
        android:id="@+id/passportCoverImg"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/app_name" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/countryNameTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/passportCoverImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="12sp"
        android:textStyle="italic"
        android:id="@+id/mobilityScoreTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/passportCoverImg"
        app:layout_constraintTop_toBottomOf="@+id/countryNameTxt" />

    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/cell_border_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        tools:layout_editor_absoluteX="-122dp"
        tools:layout_editor_absoluteY="-301dp" />
</androidx.constraintlayout.widget.ConstraintLayout>